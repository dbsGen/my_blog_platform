= javascript_include_tag 'search'
.form-horizontal
  %section
    %fieldset
      %legend= "#{t('articles.label')}"
      .navbar
        .navbar-inner
          = link_to raw("<i class='icon-plus'></i>#{t('articles.new')}"),
                    new_account_article_path,
                    :class => 'btn pull-left'
          .search-bar
            .navbar-search.pull-right{'search-url' => account_search_articles_path, for: 'content'}
              = text_field_tag 'search-text', '', :placeholder => t('search'), :class => 'search-query'
              %i.icon-search.disable#search-icon
      #content
        = render :partial => 'layouts/content',
                 :locals => {:partial => 'account/articles/article',
                             :objects => @articles,
                             :page => params[:page],
                             :total_page => @total_page,
                             :per_page => 10}